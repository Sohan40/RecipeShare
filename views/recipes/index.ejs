
    <% layout('layouts/boilerplate')%>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/recipes/new">New recipe</a>
    </div>
    <ul>
        <% for(let recipe of recipes){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                       <% if(recipe.images.length!==0) {%> 
                    <img src="<%=recipe.images[0].url%>" alt="" class="img-fluid">
                    <% } %>
                    </div>
                
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=recipe.title%></h5>
                        <p class="card-text"><%=recipe.description%></p>
                        <p class="card-text"><small class="text-muted"><%=recipe.description%></small></p>
                        <a href="/recipes/<%=recipe._id%>" class="btn btn-primary">View <%=recipe.title%></a>
                    </div>
                </div>
            </div>
            </div>
        <% }%>
    </ul>
